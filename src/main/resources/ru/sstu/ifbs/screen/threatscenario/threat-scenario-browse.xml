<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://threatScenarioBrowse.caption"
        focusComponent="threatScenariosTable">
    <data readOnly="true">
        <collection id="threatScenariosDc"
                    class="ru.sstu.ifbs.entity.ThreatScenario">
            <fetchPlan extends="_base">
                <property name="threat" fetchPlan="_base"/>
                <property name="techniques" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="threatScenariosDl">
                <query>
                    <![CDATA[select e from gwf_ThreatScenario e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="threatScenariosTable" spacing="true">
        <filter id="filter"
                dataLoader="threatScenariosDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="threatScenariosTable"
                    width="100%"
                    dataContainer="threatScenariosDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description"/>
                <column id="threat"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="threatScenariosTable.create"/>
                <button id="editBtn" action="threatScenariosTable.edit"/>
                <button id="removeBtn" action="threatScenariosTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
