<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/ui/fragment">
    <data>
        <instance id="scenarioTacticDc" class="ru.sstu.ifbs.entity.ScenarioTactic">
            <fetchPlan extends="_local">
                <property name="value" fetchPlan="_local">
                    <property name="techniques" fetchPlan="_local"/>
                </property>
                <property name="techniques" fetchPlan="_local">
                    <property name="value"/>
                </property>
            </fetchPlan>
        </instance>
    </data>
    <layout>
        <vbox spacing="true" stylename="scenario-tactic-column" expand="techniquesContainer">
            <hbox stylename="header-box">
                <label id="header"/>
                <popupView icon="ANGLE_DOWN">
                    <button id="deleteBtn" caption="msg://actions.Remove" icon="MINUS"/>
                    <label id="description"/>
                </popupView>
            </hbox>
            <vbox id="techniquesBox"/>
            <popupView id="addScenarioBtn" caption="msg://actions.Add" icon="PLUS">

            </popupView>
        </vbox>
    </layout>
</fragment>
