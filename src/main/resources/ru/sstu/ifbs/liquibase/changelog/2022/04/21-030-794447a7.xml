<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="gwf">
        <addColumn tableName="GWF_SCENARIO_TECHNIQUE">
            <column name="TACTIC_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="TACTIC_ID" tableName="GWF_SCENARIO_TECHNIQUE"/>
    </changeSet>
    <changeSet id="2" author="gwf">
        <addColumn tableName="GWF_SCENARIO_TACTIC">
            <column name="THREAT_SCENARIO_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="THREAT_SCENARIO_ID" tableName="GWF_SCENARIO_TACTIC"/>
    </changeSet>
    <changeSet id="3" author="gwf">
        <addForeignKeyConstraint baseColumnNames="TACTIC_ID" baseTableName="GWF_SCENARIO_TECHNIQUE"
                                 constraintName="FK_GWFSCENARIOTECHNI_ON_TACTIC" referencedColumnNames="ID"
                                 referencedTableName="GWF_SCENARIO_TACTIC"/>
    </changeSet>
    <changeSet id="4" author="gwf">
        <dropColumn columnName="TECHNIQUE_ID" tableName="GWF_SCENARIO_TACTIC"/>
    </changeSet>
    <changeSet id="5" author="gwf">
        <dropForeignKeyConstraint baseTableName="GWF_SCENARIO_TACTIC" constraintName="FK_GWFSCENARIO_ON_THREATSCENA"/>
    </changeSet>
    <changeSet id="6" author="gwf">
        <createIndex indexName="IDX_SCENARIOTACTIC" tableName="GWF_SCENARIO_TACTIC" unique="false">
            <column name="THREAT_SCENARIO_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="THREAT_SCENARIO_ID" baseTableName="GWF_SCENARIO_TACTIC"
                                 constraintName="FK_GWFSCENARIO_ON_THREATSCENA" referencedColumnNames="ID"
                                 referencedTableName="GWF_THREAT_SCENARIO"/>
    </changeSet>
    <changeSet id="7" author="gwf">
        <dropIndex indexName="IDX_SCENARIOTECHNIQUE" tableName="GWF_SCENARIO_TECHNIQUE"/>
    </changeSet>
    <changeSet id="8" author="gwf">
        <createIndex indexName="IDX_SCENARIOTECHNIQUE" tableName="GWF_SCENARIO_TECHNIQUE" unique="false">
            <column name="TACTIC_ID"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>