<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="gwf">
        <addColumn tableName="GWF_ACTUAL_THREAT">
            <column name="PROJECT_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="PROJECT_ID" tableName="GWF_ACTUAL_THREAT"/>
    </changeSet>
    <changeSet id="2" author="gwf">
        <addColumn tableName="GWF_SCENARIO_TACTIC">
            <column name="VALUE_" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="VALUE_" tableName="GWF_SCENARIO_TACTIC"/>
    </changeSet>
    <changeSet id="3" author="gwf">
        <createIndex indexName="IDX_ACTUALTHREAT_PROJECT_ID" tableName="GWF_ACTUAL_THREAT">
            <column name="PROJECT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PROJECT_ID" baseTableName="GWF_ACTUAL_THREAT"
                                 constraintName="FK_GWFACTUALTHREAT_ON_PROJECT" referencedColumnNames="ID"
                                 referencedTableName="GWF_PROJECT"/>
    </changeSet>
    <changeSet id="4" author="gwf">
        <dropForeignKeyConstraint baseTableName="GWF_THREAT_SCENARIO" constraintName="FK_GWFTHREATSCENARI_ON_PROJECT"/>
    </changeSet>
</databaseChangeLog>